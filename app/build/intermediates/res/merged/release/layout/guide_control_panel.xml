<?xml version="1.0" encoding="utf-8"?>
<!-- Top Secret -->
<com.dollyphin.kidszone.guide.ControlPanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guide_control"
    android:layout_gravity="center_horizontal|bottom">

    <ImageView
        android:id="@+id/guide_back"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/guide_back_enable" />

    <ImageView
        android:id="@+id/guide_exit"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/guide_control_margin"
        android:layout_toEndOf="@id/guide_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/guide_exit" />

    <ImageView
        android:id="@+id/guide_next"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/guide_control_margin"
        android:layout_toEndOf="@id/guide_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/guide_next_enable" />

</com.dollyphin.kidszone.guide.ControlPanel>