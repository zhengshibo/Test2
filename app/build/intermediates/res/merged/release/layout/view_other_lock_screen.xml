<?xml version="1.0" encoding="utf-8"?>
<!-- Top Secret -->
<com.dollyphin.kidszone.view.OtherLockScreenView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/v_other_lock_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/other_img_margin_start"
        android:src="@drawable/other_lock_screnn"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/other_txt_margin_end"
        android:layout_marginTop="@dimen/other_txt_margin_top"
        android:background="@drawable/txt_bg"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="1.3"
        android:maxWidth="@dimen/other_txt_min_width"
        android:minHeight="@dimen/other_txt_min_height"
        android:minWidth="@dimen/other_txt_min_width"
        android:paddingStart="@dimen/dp_50"
        android:text="@string/other_lock_screen_hint"
        android:textColor="@color/black_333"
        android:textSize="@dimen/txt_size_28" />

</com.dollyphin.kidszone.view.OtherLockScreenView>