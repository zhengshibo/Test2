<?xml version="1.0" encoding="utf-8"?>
<!-- Top Secret -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="@dimen/exit_dialog_width"
        android:layout_height="@dimen/exit_dialog_height"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_add_use_time"
        android:paddingEnd="@dimen/exit_dialog_padding_start"
        android:paddingStart="@dimen/exit_dialog_padding_start"
        android:paddingTop="@dimen/exit_dialog_padding_top"><!--android:paddingEnd="@dimen/exit_dialog_padding_start"-->

        <TextView
            android:id="@+id/exit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333"
            android:layout_marginBottom="@dimen/exit_title_margin"
            android:textSize="@dimen/exit_title_textsize"
            android:text="@string/exit_dialog_title"/>

        <TextView
            android:id="@+id/exit_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/exit_title"
            android:text="@string/exit_dialog_hint"
            android:textColor="@color/black_333"
            android:textSize="@dimen/exit_title_textzie" />

        <Button
            android:id="@+id/exit_ok"
            style="@style/exitBtnStyle"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/exit_btn_marginbuttom"
            android:layout_marginEnd="@dimen/exit_btn_marginend"
            android:layout_marginStart="@dimen/ok_margin_start"
            android:text="@string/ok" />

        <Button
            android:id="@+id/exit_cancel"
            style="@style/exitBtnStyle"
            android:layout_toLeftOf="@id/exit_ok"
            android:layout_marginBottom="@dimen/exit_btn_marginbuttom"
            android:text="@string/cancel" />
    </RelativeLayout>
</RelativeLayout>
