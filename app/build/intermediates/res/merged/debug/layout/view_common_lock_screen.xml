<com.dollyphin.kidszone.view.CommonLockScreenView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/v_common_lock_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lock_screen_0" />


    <com.dollyphin.kidszone.view.UnlockBar
        android:id="@+id/v_common_unlock"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/unlockbar_padding_buttom"
        android:layout_marginTop="@dimen/lock_screen_unlock_bottom"
        android:background="@null"
        app:max="11"
        app:progress="0"
        app:progressdrawable="@drawable/lock_screen_progress"
        app:thumb="@drawable/lock_screen_thumb" />

    <ImageView
        android:id="@+id/v_common_orientation_portrait"
        android:layout_width="@dimen/portrait_width"
        android:layout_height="@dimen/portrait_height"
        android:background="@drawable/common_view"
        android:visibility="gone" />
</com.dollyphin.kidszone.view.CommonLockScreenView>