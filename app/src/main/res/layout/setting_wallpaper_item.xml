<?xml version="1.0" encoding="utf-8"?>
<!-- Top Secret -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/setting_wallpaper_margin"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/setting_wallpaper_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/setting_preview_wallpaper_0" />

    <ImageView
        android:id="@+id/setting_wallpaper_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/setting_wallpaper_img"
        android:layout_alignTop="@id/setting_wallpaper_img"
        android:src="@drawable/wallpaper_checked" />


    <TextView
        android:id="@+id/setting_wallpaper_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_wallpaper_img"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="gone" />
</RelativeLayout>