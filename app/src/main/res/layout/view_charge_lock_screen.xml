<?xml version="1.0" encoding="utf-8"?>
<!-- Top Secret -->
<com.dollyphin.kidszone.view.ChargeLockScreenView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/v_exit_charging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/exit_charging_hint_margin_start"
        android:layout_marginTop="@dimen/exit_charging_hint_margin_start"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawableLeft="@drawable/exit_charging"
        android:drawablePadding="@dimen/exit_charging_hint_drawable_padding"
        android:gravity="center_vertical"
        android:text="@string/exit_charing"
        android:textColor="@color/exit_charging_hit"
        android:textSize="@dimen/charge_hint_text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/v_charge_lock_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/anim_lock_screen_charging" />

        <TextView
            android:id="@+id/v_charge_lock_battery_pct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/v_charge_lock_content"
            android:layout_alignRight="@id/v_charge_lock_content"
            android:layout_marginBottom="@dimen/charge_lock_battery_pct_margin_bottom"
            android:textColor="@color/charge_hint_text_color"
            android:textSize="@dimen/txt_size_24" />

        <TextView
            android:id="@+id/v_charge_lock_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_charge_lock_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/charge_hint_margin_top"
            android:text="@string/charge_hint"
            android:textColor="@color/charge_hint_text_color"
            android:textSize="@dimen/charge_hint_text_size" />
    </RelativeLayout>

    <View
        android:id="@+id/v_pwd_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_per_30" />

    <RelativeLayout
        android:id="@+id/v_charge_password_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/kids_system_ui_bg"
        android:clickable="true" />

    <ImageView
        android:id="@+id/v_password_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/password_exit_btn_margin"
        android:layout_marginTop="@dimen/password_exit_btn_margin"
        android:adjustViewBounds="true"
        android:src="@drawable/guide_exit"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lock_screen_parent_show_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/show_pwd_margin_start"
        android:layout_marginTop="@dimen/show_pwd_margin_top"
        android:background="@drawable/txt_bg"
        android:gravity="center"
        android:textColor="@color/black_333"
        android:textSize="@dimen/txt_size_28" />

    <ImageView
        android:id="@+id/v_charging_orientation_portrait"
        android:layout_width="@dimen/portrait_width"
        android:layout_height="@dimen/portrait_height"
        android:background="@drawable/charging_view"
        android:visibility="gone" />

</com.dollyphin.kidszone.view.ChargeLockScreenView>