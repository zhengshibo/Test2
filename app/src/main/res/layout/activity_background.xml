<?xml version="1.0" encoding="utf-8"?>
<!-- Top Secret -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_per_40">

    <FrameLayout
        android:id="@+id/setting_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/setting_content_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/parent_bg"
            android:gravity="center" />


        <ImageView
            android:id="@+id/setting_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/setting_content"
            android:layout_alignTop="@id/setting_content"
            android:layout_gravity="top|right"
            android:adjustViewBounds="true"
            android:src="@drawable/guide_exit"
            android:visibility="gone" />
    </FrameLayout>

    <Button
        android:id="@+id/setting_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/background_ok_margin_bottom"
        android:layout_marginEnd="@dimen/background_ok_margin_end"
        android:background="@drawable/guide_ok_enable"
        android:visibility="gone" />

    <TextView
        android:id="@+id/parent_show_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/show_pwd_margin_start"
        android:layout_marginTop="@dimen/show_pwd_margin_top"
        android:background="@drawable/txt_bg"
        android:gravity="center"
        android:textColor="@color/black_333"
        android:textSize="@dimen/txt_size_28" />

</RelativeLayout>
