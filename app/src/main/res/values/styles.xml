<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/ready</item>
    </style>

    <style name="AppTheme.homePage">
        <item name="android:windowAnimationStyle">@style/homeAnimation</item>
    </style>

    <style name="homeAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
    </style>

    <style name="SystemUiItemTextStyle">
        <item name="android:layout_width">@dimen/system_ui_item_witdh</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/txt_size_24</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ActivityTransparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppFilter" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="radioItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/setting_limit_time_radio_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/limit_radio_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/select_btn</item>
        <item name="android:button">@null</item>
    </style>

    <style name="IconSytle">
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/icon_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
    </style>

    <style name="IconSytle.Home">
        <item name="android:layout_width">@dimen/home_app_width</item>
        <item name="android:paddingTop">@dimen/icon_home_padding_top</item>
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:drawablePadding">@dimen/icon_drawable_padding</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowColor">#B0000000</item>
    </style>

    <style name="IconSytle.Guide">
        <item name="android:layout_width">@dimen/guide_app_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:textColor">@color/icon_text_color_dark</item>
        <item name="android:paddingTop">@dimen/icon_padding_top</item>
        <item name="android:drawablePadding">@dimen/icon_drawable_padding</item>
    </style>

    <style name="GuideTextStyle">
        <item name="android:textColor">@color/guide_text_color</item>
    </style>

    <style name="GuideTextStyle.Welcome">
        <item name="android:paddingTop">@dimen/welcome_margin_top</item>
        <item name="android:textSize">@dimen/txt_size_42</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">@integer/welcome_max_line</item>
        <item name="android:textColor">@color/welcome_text_color</item>
        <item name="android:lineSpacingExtra">@dimen/welcome_space_extra</item>
    </style>

    <style name="GuideTextStyle.Information" parent="GuideTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_28</item>
        <item name="android:maxLength">12</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="InformationEditTextStyle" parent="GuideTextStyle">
        <item name="android:layout_width">@dimen/information_edit_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/txt_size_28</item>
        <item name="android:drawableBottom">@drawable/line</item>
        <item name="android:textColorHint">@color/guide_hint_text_color</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WelcomeStyle.importance" parent="GuideTextStyle">
        <item name="android:src">@drawable/welcome_importance</item>
    </style>

    <style name="GuideChooseTextStyle" parent="GuideTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_24px</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="timeOutBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_size_24</item>
        <item name="android:maxWidth">@dimen/time_out_item_max_width</item>
        <item name="android:maxHeight">@dimen/time_out_item_max_height</item>
    </style>

    <style name="parentBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/ic_back</item>
        <item name="android:drawablePadding">@dimen/parent_back_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/parent_back_text_size</item>
    </style>

    <style name="limit_group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/shape_limit_item_space</item>
        <item name="android:minHeight">@dimen/setting_limit_time_radio_height</item>
        <item name="android:maxHeight">@dimen/setting_limit_time_radio_height</item>
        <item name="android:layout_marginTop">@dimen/limit_group</item>
        <item name="android:layout_marginBottom">@dimen/limit_group</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">@dimen/limit_time_padding</item>
        <item name="android:paddingStart">@dimen/limit_time_padding</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="limit_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/limit_txt_padding</item>
        <item name="android:textColor">@color/black_333</item>
        <item name="android:textSize">@dimen/txt_size_28</item>
    </style>

    <style name="check_style" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:button">@drawable/select_add_time_check_mark</item>
    </style>

    <style name="btn_dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/dialog_addtime_minwidth</item>
        <item name="android:textColor">@color/black_333</item>
        <item name="android:textSize">@dimen/txt_size_24</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="dialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="exitBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/exit_dialog_btn_width</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black_333</item>
        <item name="android:textSize">@dimen/exit_dialog_btn_textsize</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
